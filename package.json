{
  "name": "swagger2api",
  "displayName": "swagger2api",
  "description": "Quickly converting api document to usable Front-End code.",
  "version": "0.1.0",
  "publisher": "liik",
  "repository": "https://github.com/Liiked/swagger2api",
  "icon": "https://tva1.sinaimg.cn/large/006y8mN6gy1g7t8gz6mm2j305k05kq2v.jpg",
  "keywords": [
    "swagger",
    "api"
  ],
  "categories": [
    "Formatters"
  ],
  "engines": {
    "vscode": "^1.36.0"
  },
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "s2a.readjson",
        "title": "swagger json to template",
        "category": "swagger2api",
        "icon": {
          "light": "./media/transfer.svg",
          "dark": "./media/transfer.svg"
        }
      },
      {
        "command": "s2a.convert",
        "title": "swagger template to api",
        "category": "swagger2api",
        "icon": {
          "light": "./media/transfer.svg",
          "dark": "./media/transfer.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "s2a.readjson",
          "group": "navigation",
          "when": "resourceLangId == json"
        },
        {
          "command": "s2a.convert",
          "group": "navigation",
          "when": "resourceFilename =~ /Untitled/"
        }
      ],
      "commandPalette": [
        {
          "command": "s2a.readjson",
          "when": "resourceLangId == json"
        },
        {
          "command": "s2a.convert",
          "when": "resourceFilename =~ /Untitled/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "commit": "git cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^10.2.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "@types/jsonfile": "^5.0.0",
    "commitizen": "^4.0.3",
    "jsonfile": "^5.0.0"
  }
}
